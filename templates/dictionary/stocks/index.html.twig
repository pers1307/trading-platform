        <li class="nav-item">
            <a href="/" class="nav-link">
                <i class="nav-icon fas fa-calculator"></i>
                <p>
                    Калькулятор
                    <i class="right fas fa-angle-left"></i>
                </p>
            </a>
            <ul class="nav nav-treeview">
                <li class="nav-item">
                    <a href="/" class="nav-link">
