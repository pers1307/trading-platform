{% block content %}
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Позиции</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item">
                                <a href="{{ path('app_dashboard_index') }}">Главная панель</a>
                            </li>
                            <li class="breadcrumb-item active">Позиции</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <section class="content">
            <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Список</h3>
                                </div>
                                <div class="card-body">
                                    <table class="table table-bordered">
                                        <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Счет</th>
                                            <th>Стратегия</th>
                                            <th>Акция</th>
                                            <th>Тип</th>
                                            <th>Время открытия</th>
                                            <th>Цена открытия</th>
                                            <th>Stop Loss</th>
                                            <th>Take Profit</th>
                                            <th>Лот</th>
                                            <th>Время закрытия</th>
                                            <th>Цена закрытия</th>
                                            <th>Статус</th>
                                            <th>Описание</th>
                                            <th style="width: 50px">
                                                <a href="{{ path('app_trade_add_form') }}" type="button" class="btn btn-success new-trade">
                                                    <i class="fa fa-plus"></i>
                                                </a>
                                            </th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for trade in trades %}
                                            <tr>
                                                <td>{{ trade.id }}</td>
                                                <td>{{ trade.accaunt.title }}</td>
                                                <td>{{ trade.strategy.title }}</td>
                                                <td>{{ trade.stock.secId }}</td>
                                                <td>{{ trade.type }}</td>
                                                <td>{{ trade.openDateTime|date('Y-m-d H:m:s') }}</td>
                                                <td>{{ trade.openPrice|stockPrice(trade.stock.minStep) }}</td>
                                                <td>{{ trade.stopLoss|stockPrice(trade.stock.minStep) }}</td>
                                                <td>{{ trade.takeProfit|stockPrice(trade.stock.minStep) }}</td>
                                                <td>{{ trade.lots }}</td>
                                                <td>{{ trade.closeDateTime|date('Y-m-d H:m:s') }}</td>
                                                <td>{{ trade.closePrice|stockPrice(trade.stock.minStep) }}</td>
                                                <td>{{ trade.status }}</td>
                                                <td>{{ trade.description }}</td>
                                                <td>
                                                    <div class="btn-group">
                                                        <a href="{{ path('app_trade_edit_form', {id: trade.id}) }}" type="button" class="btn btn-info">
                                                            <i class="fa fa-edit"></i>
                                                        </a>
                                                        <a href="{{ path('app_trade_remove', {id: trade.id}) }}" type="button" class="btn btn-danger">
                                                            <i class="fa fa-window-close"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        </section>
    </div>
{% endblock %}

