{% extends 'base.admin.html.twig' %}

{% block content %}
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">{{ strategy.title }}. {{ accaunt.title }}</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item">
                                <a href="{{ path('app_dashboard_index') }}">Главная панель</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="{{ path('app_statistics_strategies_list') }}">Статистика по стратегиям</a>
                            </li>
                            <li class="breadcrumb-item active">Стратегия</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-3 col-6">
                        <div class="small-box bg-info">
                            <div class="inner">
                                <h3>{{ extensionTradesCollection.statistic.timeStatistic.totalTimeIntervalInSecond|toDays }}
                                    дней</h3>
                                <p>Уже торгуем</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-forward"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-6">
                        <div class="small-box bg-success">
                            <div class="inner">
                                <h3>
                                    {{ extensionTradesCollection.statistic.timeStatistic.averageProfitTradeInterval|toHours }}
                                    часа
                                    / {{ extensionTradesCollection.statistic.timeStatistic.averageProfitTradeInterval|toDays }}
                                    дней
                                </h3>
                                <p>Средняя длительность положительной сделки</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-plus"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-6">
                        <div class="small-box bg-danger">
                            <div class="inner">
                                <h3>
                                    {{ extensionTradesCollection.statistic.timeStatistic.averageLossTradeInterval|toHours }}
                                    часа
                                    / {{ extensionTradesCollection.statistic.timeStatistic.averageLossTradeInterval|toDays }}
                                    дней
                                </h3>
                                <p>Средняя длительность отрицательной сделки</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-minus"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-6">
                        <div class="small-box bg-lightblue">
                            <div class="inner">
                                <h3>
                                    {{ extensionTradesCollection.statistic.timeStatistic.averageTradeInterval|toHours }}
                                    часа
                                    / {{ extensionTradesCollection.statistic.timeStatistic.averageTradeInterval|toDays }}
                                    дней
                                </h3>
                                <p>Средняя длительность сделки</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-calendar"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3 col-6">
                        <div class="small-box bg-orange">
                            <div class="inner">
                                <h3>{{ extensionTradesCollection.statistic.countStatistic.countTrades }}</h3>
                                <p>Совершенных сделок</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-play"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-6">
                        <div class="small-box bg-success">
                            <div class="inner">
                                <h3>{{ extensionTradesCollection.statistic.countStatistic.countProfitTrades }}</h3>
                                <p>Количество прибыльных сделок</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-plus"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-6">
                        <div class="small-box bg-danger">
                            <div class="inner">
                                <h3>
                                    {{ extensionTradesCollection.statistic.countStatistic.countLossTrades }}
                                </h3>
                                <p>Количество убыточных сделок</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-minus"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-6">
                        <div class="small-box bg-lightblue">
                            <div class="inner">
                                <h3>
                                    {{ extensionTradesCollection.statistic.countStatistic.persentProfitTrades }} %
                                    /
                                    {{ extensionTradesCollection.statistic.countStatistic.persentLossTrades }} %
                                </h3>
                                <p>Соотношение P/L сделок</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-compass"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3 col-6">
                        <div class="small-box bg-warning">
                            <div class="inner">
                                <h3>{{ extensionTradesCollection.statistic.expectedStatistic.expectedValue|number_format(2, '.', ' ') }}</h3>
                                <p>Математическое ожидание</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-calculator"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-6">
                        <div class="small-box bg-success">
                            <div class="inner">
                                <h3>
                                    {{ extensionTradesCollection.statistic.expectedStatistic.averageProfit|number_format(2, '.', ' ') }}
                                </h3>
                                <p>Среднее значение прибыли</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-plus"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-6">
                        <div class="small-box bg-danger">
                            <div class="inner">
                                <h3>
                                    {{ extensionTradesCollection.statistic.expectedStatistic.averageLoss|number_format(2, '.', ' ') }}
                                </h3>
                                <p>Среднее значение убытка</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-minus"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-6">
                        <div class="small-box bg-lightblue">
                            <div class="inner">
                                <h3>
                                    2.5
                                </h3>
                                <p>P/L</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-flash"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">График</h3>
                            </div>
                            <div class="card-body">
                                <div class="card bg-gradient-success">
                                    <div class="card-body">
                                        <canvas
                                                class="chart"
                                                id="line-chart"
                                                style="min-height: 350px; height: 350px; max-height: 350px; max-width: 100%;"
                                                data-graph-data-encode="{{ extensionTradesCollection.graph.formatData }}"
                                                data-accaunt-name="{{ 'Динамика стратегии' }}"
                                        ></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Список</h3>
                            </div>
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th style="width: 10px">#</th>
                                        <th>Акция</th>
                                        <th>Тип</th>
                                        <th>Время открытия</th>
                                        <th>Цена открытия</th>
                                        <th>Stop Loss</th>
                                        <th>Take Profit</th>
                                        <th>Лот</th>
                                        <th>Время закрытия</th>
                                        <th>Цена закрытия</th>
                                        <th>Статус</th>
                                        <th>Результат</th>
                                        <th>Накопительный итог</th>
                                        <th style="width: 50px"></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for key,extensionTrade in extensionTradesCollection.extensionTrades %}
                                        <tr>
                                            <td>{{ extensionTrade.trade.id }}</td>
                                            <td>{{ extensionTrade.trade.stock.secId }}</td>
                                            <td>{{ extensionTrade.trade.type|tradeType }}</td>
                                            <td>{{ extensionTrade.trade.openDateTime|date('Y-m-d H:m:s') }}</td>
                                            <td>{{ extensionTrade.trade.openPrice|stockPrice(extensionTrade.trade.stock.minStep) }}</td>
                                            <td>{{ extensionTrade.trade.stopLoss|stockPrice(extensionTrade.trade.stock.minStep) }}</td>
                                            <td>{{ extensionTrade.trade.takeProfit|stockPrice(extensionTrade.trade.stock.minStep) }}</td>
                                            <td>{{ extensionTrade.trade.lots }}</td>
                                            <td>{{ extensionTrade.trade.closeDateTime|date('Y-m-d H:m:s') }}</td>
                                            <td>{{ extensionTrade.trade.closePrice|stockPrice(extensionTrade.trade.stock.minStep) }}</td>
                                            <td>{{ extensionTrade.trade.status|tradeStatus }}</td>
                                            <td>{{ extensionTrade.tradeResult|number_format(2, '.', ' ') }}</td>
                                            <td>{{ extensionTradesCollection.cumulativeTotalArray[key]|number_format(2, '.', ' ') }}</td>
                                            <td>
                                                <div class="btn-group">
                                                    {#                                                    <a href="{{ path('app_trade_edit_form', {id: trade.id}) }}" type="button" class="btn btn-info"> #}
                                                    {#                                                        <i class="fa fa-edit"></i> #}
                                                    {#                                                    </a> #}
                                                    <a href="{{ path('app_trade_confirm_remove', {id: extensionTrade.trade.id}) }}" type="button" class="btn btn-danger">
                                                        <i class="fa fa-window-close"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="{{ asset('vendor/js/chart.js/Chart.min.js') }}"></script>
    <script src="{{ asset('vendor/js/trades_strategy.js') }}"></script>
{% endblock %}
