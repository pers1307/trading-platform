{% extends 'base.admin.html.twig' %}

{% block content %}
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Счета</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item">
                                <a href="{{ path('app_dashboard_index') }}">Главная панель</a>
                            </li>
                            <li class="breadcrumb-item active">Счета</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Список</h3>
                            </div>
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th style="width: 10px">#</th>
                                        <th>Название</th>
                                        <th>Код</th>
                                        <th>Дата создания</th>
                                        <th style="width: 50px"></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for index,accaunt in accaunts %}
                                        <tr>
                                            <td>{{ index + 1 }}.</td>
                                            <td>{{ accaunt.title }}</td>
                                            <td>{{ accaunt.brockerTitle }}</td>
                                            <td>{{ accaunt.created|date('Y-m-d H:i:s') }}</td>
                                            <td>
                                                <div class="btn-group">
                                                    <a href="{{ path('app_accaunt_history_list', {id: accaunt.id}) }}" type="button" class="btn btn-info">
                                                        <i class="fas fa-list"></i>
                                                    </a>
                                                    <a href="{{ path('app_accaunt_history_add_form', {id: accaunt.id}) }}" type="button" class="btn btn-success">
                                                        <i class="fas fa-plus"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}

